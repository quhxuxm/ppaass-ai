{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Agent",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "build",
                    "--package",
                    "agent"
                ],
                "filter": {
                    "name": "agent",
                    "kind": "bin"
                }
            },
            "args": [
                "--config",
                "config/local/agent.toml"
            ],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": [
                "rust"
            ],
            "stopOnEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Proxy",
            "type": "lldb",
            "request": "launch",
            "cargo": {
